{{#if isLogin}}
<div class="large-12 columns">
<form id="addQuestionForm" name="question-form">
    <div class="row collapse">
        <div class="small-8 medium-8 medium-offset-1 columns">
            <input type="text" id="question-textarea" name="question" required placeholder="Enter your Question here" />
            <div class="hint-text">
                <span id="counter">0</span> characters
            </div>
        </div>
        <div class="small-4 medium-2 columns end">
            <button class="button postfix blue-button custom-postfix" id="addQuestionForm-add">
                <span class="show-for-large-up">
                    <i class="fa fa-paper-plane"></i> Post
                </span>
                <span class="hide-for-large-up">
                    <i class="fa fa-paper-plane"></i>
                </span>
            </button>
        </div>
    </div>
</form>
</div>
{{else}}
<div class="large-12 columns">
    <form>
    <div class="row collapse">
        <div class="small-8 medium-8 medium-offset-1 columns">
            <input type="text" placeholder="Choose a username in order to post questions" name="username" id="username" required>
        </div>
        <div class="small-4 medium-2 columns end">
            <button class="button postfix blue-button custom-postfix">Enter</button>
        </div>
    </div>
    </form>
</div>
{{/if}}
